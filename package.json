{
	"name": "workspace-views",
	"displayName": "Workspace views",
	"description": "Views for different folders in a multi-root workspace.",
	"version": "0.0.1",
	"publisher": "nirlob",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nirlob/workspace-views.git"
	},
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Visualization"
	],
	"author": {
        "email": "jfgs1609@gmail.com",
        "name": "Jose Francisco Gonzalez",
        "url": "https://github.com/nirlob"
    },
	"main": "./out/src/extension",
	"keywords": [
        "views",
        "workspace"
    ],
	"activationEvents": [
        "onStartupFinished"
    ],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Workspace Views",
			"properties": {
				"workspaceViews.statusColor": {
					"type": "string",
					"default": "#FFFFFF",
					"description": "Color to use for the status bar item in Hex format (e.g., #FF0000 for red)."
				},
				"workspaceViews.collapseOnChange": {
					"type": "boolean",
					"default": "true",
					"description": "Collapse the explorer folders when changing the active folder view."
				}
			}
		}
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
